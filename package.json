{
  "name": "iris",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "packageManager": "yarn@1.22.22",
  "engines": {
    "node": ">=16.0.0 <17.0.0 || >=18.18.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/irislib/iris-client.git"
  },
  "description": "Nostr client",
  "author": "Martti Malmi",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "start": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --fix",
    "preview": "vite preview",
    "test": "vitest",
    "format": "prettier --write \"**/*.+(js|jsx|tsx|json|yml|yaml|css|md)\""
  },
  "build": {
    "extends": null,
    "appId": "com.nestr",
    "mac": {
      "icon": "src/assets/nest-logo-no-name.png"
    },
    "win": {
      "icon": "src/assets/nest-logo-no-name.png"
    },
    "nsis": {
      "installerIcon": "src/assets/nest-logo-no-name.png"
    },
    "files": [
      "dist/**/*",
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet": "^6.1.0",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^6.26.1",
    "react-string-replace": "^1.1.1",
    "react-swipeable": "^7.0.1",

    "@remixicon/react": "^4.2.0",

    "@getalby/bitcoin-connect-react": "^3.6.2",
    "bolt11": "^1.4.1",

    "@noble/hashes": "^1.4.0",
    "@nostr-dev-kit/ndk": "2.11.0",
    "@nostr-dev-kit/ndk-cache-dexie": "^2.5.9",
    "nostr-double-ratchet": "0.0.3",
    "nostr-social-graph": "1.0.16",
    "nostr-tools": "^2.7.2",

    "irisdb": "1.0.12",
    "irisdb-hooks": "1.0.14",
    "irisdb-nostr": "1.0.23",
    "localforage": "^1.10.0",

    "@zxing/library": "^0.21.3",
    "classnames": "^2.5.1",
    "debug": "^4.3.6",
    "fuse.js": "^7.0.0",
    "hls.js": "^1.5.15",
    "lodash": "^4.17.21",
    "minidenticons": "^4.2.1",
    "qr-code-styling": "^1.6.0-rc.1",
    "qrcode": "^1.5.4",
    "typescript-lru-cache": "^2.0.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/config": "^3.3.5",
    "@types/crypto-js": "^4.2.2",
    "@types/date-fns": "^2.6.0",
    "@types/debug": "^4.1.12",
    "@types/diff": "^5.2.2",
    "@types/lodash": "^4.17.7",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@types/react-helmet": "^6.1.11",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/sanitize-html": "^2.13.0",
    "@types/uuid": "^10.0.0",

    "@typescript-eslint/eslint-plugin": "7.8.0",
    "@typescript-eslint/parser": "7.9.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-react": "7.34.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.11",
    "prettier": "^3.3.3",
    "prettier-plugin-sort-imports": "^1.8.6",

    "@tailwindcss/typography": "^0.5.15",
    "autoprefixer": "^10.4.20",
    "daisyui": "^4.12.10",
    "postcss": "^8.4.41",
    "tailwindcss": "^3.4.10",

    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.2",
    "config": "^3.3.12",
    "cross-env": "^7.0.3",
    "jsdom": "^25.0.0",
    "rollup-plugin-visualizer": "^5.12.0",
    "typescript": "^5.5.4",
    "vite": "^5.4.2",
    "vite-plugin-node-polyfills": "^0.22.0",
    "vite-plugin-pwa": "^0.20.5",
    "vitest": "^2.0.5",
    "wait-on": "^8.0.0"
  }
}
